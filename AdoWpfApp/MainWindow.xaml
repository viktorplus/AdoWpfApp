<Window x:Class="AdoWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ComboBox x:Name="ComboBoxQueries" SelectionChanged="ComboBoxQueries_SelectionChanged">
            <ComboBoxItem Content="Show All Students and Grades" Tag="SELECT * FROM Students"/>
            <ComboBoxItem Content="Show All Student Names" Tag="SELECT Surname, Name, Vatername FROM Students"/>
            <ComboBoxItem Content="Show Average Grades" Tag="SELECT AVG(Gradeavr) AS AverageGrade FROM Students"/>
            <ComboBoxItem Content="Show Students with Minimum Grade" Tag="SELECT * FROM Students WHERE Gradeavr > 9.0"/>
            <ComboBoxItem Content="Show Subjects with Minimum Average Grades" Tag="SELECT DISTINCT Subjectmin FROM Students WHERE Gradeavr = (SELECT MIN(Gradeavr) FROM Students)"/>
        </ComboBox>

        <DataGrid x:Name="DG_Table" Margin="0,30,0,0" AutoGenerateColumns="True"/>
    </Grid>
</Window>
