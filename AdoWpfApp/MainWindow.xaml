<Window x:Class="AdoWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <!-- Добавлен ComboBox для выбора запроса -->
        <ComboBox x:Name="ComboBoxQueries" SelectionChanged="ComboBoxQueries_SelectionChanged">
            <ComboBoxItem>Show All Students and Grades</ComboBoxItem>
            <ComboBoxItem>Show All Student Names</ComboBoxItem>
            <ComboBoxItem>Show Average Grades</ComboBoxItem>
            <ComboBoxItem>Show Students with Minimum Grade</ComboBoxItem>
            <ComboBoxItem>Show Subjects with Minimum Average Grades</ComboBoxItem>
        </ComboBox>

        <!-- Добавлен DataGrid для отображения результатов запроса -->
        <DataGrid x:Name="DG_Table" Margin="0,30,0,0" AutoGenerateColumns="True"/>
    </Grid>
</Window>
